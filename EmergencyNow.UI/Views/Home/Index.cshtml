@{
    ViewData["Title"] = "EmergencyNow - Your Immediate Response Partner";
}

<div class="container-fluid p-0">
    <!-- Large Banner Section -->
    <div class="banner-section" style="position: relative; background-image: url('https://www.ui1.es/sites/default/files/blog/images/bomberos_retocada.jpg'); background-size: cover; background-position: center; height: 60vh;">
        <div class="banner-overlay" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.4);">
            <div class="container text-center text-white" style="position: relative; z-index: 2; padding-top: 80px;">
                <h1 class="display-4">EmergencyNow</h1>
                <p class="lead">Tu sistema de ayuda inmediata</p>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div id="features" class="container py-5">
    <h2 class="text-center mb-5">¿Que hacemos?</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="https://herediahoy.com/wp-content/uploads/2021/08/emergencias.jpg" class="card-img-top" alt="Emergency Services">
                <div class="card-body">
                    <h5 class="card-title">Respuestas a tiempo real</h5>
                    <p class="card-text">El sistema carga las respuestas entrantes logrando asi tener todas las respuestas a tiempo</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="https://concepto.de/wp-content/uploads/2015/03/emergencias-e1504892807821.jpeg" class="card-img-top" alt="Emergency Teams">
                <div class="card-body">
                    <h5 class="card-title">Multiples tipos de ayuda</h5>
                    <p class="card-text">Tenemos de equipo policial, bomberos y medicos dispuestos a ayudar</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="https://universidadeuropea.com/resources/media/images/emergencias-sanitarias-1200x630.original.jpg" class="card-img-top" alt="Medical Response">
                <div class="card-body">
                    <h5 class="card-title">Sistema avanzado</h5>
                    <p class="card-text">Un sistema donde puedes seleccionar su ubicacion rapido, de esta forma podemos llegar mas rapido</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action Section -->
<div class="text-center bg-dark text-white py-5">
    <h3>Join EmergencyNow Today</h3>
    <p>Stay informed, stay safe, and get the help you need in case of an emergency.</p>
    <a href="/Account/Register" class="btn btn-light btn-lg">Sign Up Now</a>
</div>
