@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: url('https://nodens.eu/wp-content/uploads/2019/10/AdobeStock_281967200.jpeg') no-repeat center center fixed;
        background-size: cover;
    }

    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 200px); /* Ajuste para respetar header y footer */
    }

    .login-card {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
    }

        .login-card h1 {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .login-card .form-group label {
            font-weight: bold;
            color: #555;
        }

        .login-card .form-control {
            border-radius: 10px;
            padding: 0.75rem;
            font-size: 1rem;
        }

            .login-card .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }

        .login-card .btn-primary {
            background-color: #f44336;
            border: none;
            border-radius: 10px;
            color: white;
            font-weight: bold;
            font-size: 1rem;
            padding: 0.75rem;
            width: 100%;
        }

            .login-card .btn-primary:hover {
                background-color: #d32f2f;
            }

        .login-card .recovery-password {
            margin-top: 1rem;
            text-align: center;
            font-size: 0.9rem;
        }

            .login-card .recovery-password a {
                color: #007bff;
                text-decoration: none;
            }

                .login-card .recovery-password a:hover {
                    text-decoration: underline;
                }
</style>

<div class="login-wrapper">
    <div class="login-card">
        <h1>Inicia Sesion</h1>
        <div class="text-danger" asp-validation-summary="All"></div>
        <form method="post">
            <div class="form-group mb-3">
                <label for="email">Correo Electronico</label>
                <input id="email" name="email" type="text" class="form-control" placeholder="Ingresa el correo de tu cuenta" />
            </div>

            <div class="form-group mb-3">
                <label for="password">Contraseña</label>
                <input id="password" name="password" type="password" class="form-control" placeholder="Ingresa la contraseña" />
            </div>

            <button class="btn btn-primary" type="submit">Log In</button>
        </form>
    </div>
</div>
