@model IEnumerable<EmergencyNow.UI.Models.Interfaces.Reportes.ReporteDto>

@{
    ViewData["Title"] = "HistorialTipoDeRespuesta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1>Historial de casos por Tipo de Respuesta</h1>
    <p>Aquí encontrarás todas los casos en los que has dado respuesta.</p>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.TipoIncidente)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Gravedad)</th>
            <th>@Html.DisplayNameFor(model => model.UbicacionString)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.FechaReporte)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TipoIncidente)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.Gravedad)</td>
                <td>@Html.DisplayFor(modelItem => item.UbicacionString)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaReporte)</td>
                <td>
                    <a asp-controller="Reportes" asp-action="DetalleCompleto" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Ver Reporte</a>
                </td>
            </tr>
        }
    </tbody>
</table>
