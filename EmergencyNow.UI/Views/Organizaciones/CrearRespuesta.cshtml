@model EmergencyNow.UI.Models.Interfaces.ObjetoCompuesto.UsuarioTipoRespuesta

@{
    ViewData["Title"] = "Crear Usuario y Tipo de Respuesta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<h4 class="text-center">Formulario de Creación de Usuario y Tipo de Respuesta</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <form method="post">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }

            <!-- Campos del Modelo Usuario -->
            <h5 class="text-center">Información del Usuario</h5>

            <!-- Primera fila: Nombre de Usuario, Correo Electrónico, Contraseña -->
            <div class="form-row custom-form-row">
                <div class="form-group col-md-4">
                    <label for="Usuario.Name">Nombre de Usuario</label>
                    <input asp-for="Usuario.Name" class="form-control" />
                    <span asp-validation-for="Usuario.Name" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label for="Usuario.Email">Correo Electrónico</label>
                    <input asp-for="Usuario.Email" class="form-control" />
                    <span asp-validation-for="Usuario.Email" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label for="Usuario.Password">Contraseña</label>
                    <input asp-for="Usuario.Password" type="password" class="form-control" />
                    <span asp-validation-for="Usuario.Password" class="text-danger"></span>
                </div>
            </div>

            <!-- Segunda fila: Nombre, Primer Apellido, Segundo Apellido -->
            <div class="form-row custom-form-row">
                <div class="form-group col-md-4">
                    <label for="Usuario.NombreUsuario">Nombre</label>
                    <input asp-for="Usuario.NombreUsuario" class="form-control" />
                    <span asp-validation-for="Usuario.NombreUsuario" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label for="Usuario.Apellido1">Primer Apellido</label>
                    <input asp-for="Usuario.Apellido1" class="form-control" />
                    <span asp-validation-for="Usuario.Apellido1" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label for="Usuario.Apellido2">Segundo Apellido</label>
                    <input asp-for="Usuario.Apellido2" class="form-control" />
                    <span asp-validation-for="Usuario.Apellido2" class="text-danger"></span>
                </div>
            </div>

            <!-- Tercera fila: Ubicación y Teléfono -->
            <div class="form-row custom-form-row">
                <div class="form-group col-md-6">
                    <label for="Usuario.Ubicacion">Ubicación</label>
                    <input asp-for="Usuario.Ubicacion" class="form-control" />
                    <span asp-validation-for="Usuario.Ubicacion" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label for="Usuario.Telefono">Teléfono</label>
                    <input asp-for="Usuario.Telefono" class="form-control" />
                    <span asp-validation-for="Usuario.Telefono" class="text-danger"></span>
                </div>
            </div>

            <!-- Rol - oculto y con valor predeterminado -->
            <input asp-for="Usuario.AgregarRol" type="hidden" value="Organización" />

            <!-- Campos del Modelo Tipo de Respuesta -->
            <h5 class="text-center">Tipo de Respuesta</h5>

            <!-- Cuarta fila: Placa, Tipo de Respuesta, Capacidad Máxima -->
            <div class="form-row custom-form-row">
                <div class="form-group col-md-4">
                    <label for="Respuestas.Placa">Placa</label>
                    <input asp-for="Respuestas.Placa" class="form-control" />
                    <span asp-validation-for="Respuestas.Placa" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label for="Respuestas.TipoDeRespuestaGeneral">Tipo de Respuesta</label>
                    <select asp-for="Respuestas.TipoDeRespuestaGeneral" class="form-control">
                        <option value="Policial">Policial</option>
                        <option value="Medica">Médica</option>
                        <option value="Bomberos">Bomberos</option>
                    </select>
                    <span asp-validation-for="Respuestas.TipoDeRespuestaGeneral" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label for="Respuestas.CantidadMaxDePersonas">Capacidad Máxima de Personas</label>
                    <input asp-for="Respuestas.CantidadMaxDePersonas" class="form-control" />
                    <span asp-validation-for="Respuestas.CantidadMaxDePersonas" class="text-danger"></span>
                </div>
            </div>

            <!-- Botón de Enviar -->
            <div class="form-group text-center">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="MostrarEquipoDisponible" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    
</div>

<!-- Estilos personalizados -->
<style>
    .custom-form-row {
        margin-bottom: 15px; /* Separación entre las filas */
    }

    .form-row {
        display: flex;
        justify-content: space-between;
        gap: 10px; /* Control de espacio entre los inputs */
    }

    .form-group {
        margin-bottom: 0; /* No margen adicional */
    }

    .form-control {
        margin-bottom: 10px; /* Separación mínima entre los inputs */
    }
</style>
